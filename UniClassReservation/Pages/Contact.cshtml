@page
@model ContactModel
@{
    ViewData["Title"] = "Help & FAQ";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-body">
                    <h1 class="mb-4">Help & FAQ</h1>
                    <p class="lead">Find answers to common questions and learn how to use the Classroom Reservation System effectively.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Quick Start Guide -->
            <div class="card mb-4">
                <div class="card-body">
                    <h3 class="card-title">Quick Start Guide</h3>
                    <div class="accordion" id="quickStartAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne">
                                    For Instructors
                                </button>
                            </h2>
                            <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#quickStartAccordion">
                                <div class="accordion-body">
                                    <ol>
                                        <li>Log in to your account</li>
                                        <li>Go to "Instructor Panel"</li>
                                        <li>Click "Create Reservation"</li>
                                        <li>Select classroom, date, and time</li>
                                        <li>Submit your reservation request</li>
                                        <li>Wait for admin approval</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo">
                                    For Administrators
                                </button>
                            </h2>
                            <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#quickStartAccordion">
                                <div class="accordion-body">
                                    <ol>
                                        <li>Log in to your admin account</li>
                                        <li>Access "Admin Panel"</li>
                                        <li>Manage classrooms and terms</li>
                                        <li>Review and approve reservations</li>
                                        <li>Monitor system activity</li>
                                        <li>Handle user requests</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- FAQ Section -->
            <div class="card mb-4">
                <div class="card-body">
                    <h3 class="card-title">Frequently Asked Questions</h3>
                    <div class="accordion" id="faqAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                    How do I make a classroom reservation?
                                </button>
                            </h2>
                            <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    As an instructor, you can make reservations through the Instructor Panel. Select your desired classroom, date, and time slot. The system will automatically check for conflicts and holidays.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                    Can I cancel or modify my reservation?
                                </button>
                            </h2>
                            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Yes, you can modify or cancel your reservation up to 24 hours before the scheduled time. Go to "My Reservations" in the Instructor Panel to make changes.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                    What happens during holidays?
                                </button>
                            </h2>
                            <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    The system automatically blocks reservations during holidays. You can view the holiday calendar in the system to plan your reservations accordingly.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                                    How do I report technical issues?
                                </button>
                            </h2>
                            <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    For technical support, please contact the IT Department using the contact form below. Include detailed information about the issue you're experiencing.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Contact Form removed as requested -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize all accordions
        var accordions = document.querySelectorAll('.accordion');
        accordions.forEach(function(accordion) {
            new bootstrap.Accordion(accordion);
        });
    </script>
} 