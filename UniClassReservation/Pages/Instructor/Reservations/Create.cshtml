@page
@model UniClassReservation.Pages.Instructor.Reservations.CreateModel
@{
    ViewData["Title"] = "Add New Reservation";
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning">@TempData["Warning"]</div>
}
<h2>Add New Reservation</h2>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Reservation.TermId" class="form-label">Term</label>
        <select asp-for="Reservation.TermId" class="form-select" asp-items="Model.Terms">
            <option value="">Select term</option>
        </select>
        <span asp-validation-for="Reservation.TermId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Reservation.ClassroomId" class="form-label">Class</label>
        <select asp-for="Reservation.ClassroomId" class="form-select" asp-items="Model.Classrooms">
            <option value="">Select class</option>
        </select>
        <span asp-validation-for="Reservation.ClassroomId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Reservation.StartTime" class="form-label">Start Time</label>
        <input asp-for="Reservation.StartTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="Reservation.StartTime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Reservation.EndTime" class="form-label">End Time</label>
        <input asp-for="Reservation.EndTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="Reservation.EndTime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input asp-for="RepeatWeekly" type="checkbox" class="form-check-input" id="repeatWeekly" />
        <label class="form-check-label" for="repeatWeekly">Repeat Weekly</label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form> 