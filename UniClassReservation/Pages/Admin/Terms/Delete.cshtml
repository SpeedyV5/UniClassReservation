@page "{id:int}"
@model UniClassReservation.Pages.Admin.Terms.DeleteModel
@{
    ViewData["Title"] = "Delete Term";
}
<h2>Delete Term</h2>
<div class="alert alert-danger">
    Are you sure you want to delete the term <strong>@Model.Term.Name</strong>?
</div>
<form method="post">
    <input type="hidden" asp-for="Term.Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form> 