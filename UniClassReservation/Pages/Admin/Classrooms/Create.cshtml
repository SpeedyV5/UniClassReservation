@page
@model UniClassReservation.Pages.Admin.Classrooms.CreateModel
@{
    ViewData["Title"] = "Add New Classroom";
}
<h2>Add New Classroom</h2>
<form method="post">
    <div class="mb-3">
        <label asp-for="Classroom.Name" class="form-label">Name</label>
        <input asp-for="Classroom.Name" class="form-control" />
        <span asp-validation-for="Classroom.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Classroom.Capacity" class="form-label">Capacity</label>
        <input asp-for="Classroom.Capacity" type="number" class="form-control" />
        <span asp-validation-for="Classroom.Capacity" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Classroom.Location" class="form-label">Location</label>
        <input asp-for="Classroom.Location" class="form-control" />
        <span asp-validation-for="Classroom.Location" class="text-danger"></span>
    </div>
    <div class="mb-3 form-check">
        <input asp-for="Classroom.IsActive" class="form-check-input" />
        <label asp-for="Classroom.IsActive" class="form-check-label">Active?</label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form> 