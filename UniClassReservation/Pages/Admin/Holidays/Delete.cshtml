@page "{id:int}"
@model UniClassReservation.Pages.Admin.Holidays.DeleteModel
@{
    ViewData["Title"] = "Delete Holiday";
}
<h2>Delete Holiday</h2>
<div class="alert alert-danger">
    Are you sure you want to delete the holiday <strong>@Model.Holiday.Name</strong>?
</div>
<form method="post">
    <input type="hidden" asp-for="Holiday.Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form> 