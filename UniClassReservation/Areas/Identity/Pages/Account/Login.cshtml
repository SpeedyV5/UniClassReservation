@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background: linear-gradient(135deg, #f8fafc 0%, #e0e7ef 100%);
        min-height: 100vh;
    }
    .login-card {
        border-radius: 1.5rem;
        box-shadow: 0 4px 32px 0 rgba(0,0,0,0.10);
        background: #fff;
        padding: 2.5rem 2rem;
        margin: 2rem auto;
        max-width: 420px;
    }
    .login-title {
        font-size: 2.2rem;
        font-weight: 700;
        color: #3b4256;
        margin-bottom: 0.5rem;
    }
    .login-subtitle {
        color: #6c757d;
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }
    .login-icon {
        font-size: 3.5rem;
        color: #4f8cff;
        margin-bottom: 1.2rem;
        text-align: center;
    }
    .form-control, .form-check-input {
        border-radius: 0.7rem;
    }
    .btn-primary {
        border-radius: 0.7rem;
        font-weight: 600;
        font-size: 1.1rem;
        background: linear-gradient(90deg, #4f8cff 0%, #6a82fb 100%);
        border: none;
    }
    .btn-primary:hover {
        background: linear-gradient(90deg, #6a82fb 0%, #4f8cff 100%);
    }
    .login-links a {
        color: #4f8cff;
        text-decoration: none;
    }
    .login-links a:hover {
        text-decoration: underline;
    }
    @@media (min-width: 900px) {
        .login-row {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 80vh;
        }
        .login-card {
            margin: 0;
        }
        .login-side {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            padding-left: 3rem;
        }
    }
</style>

<div class="container-fluid login-row">
    <div class="row w-100 justify-content-center align-items-center">
        <div class="col-lg-5 col-md-8">
            <div class="login-card">
                <div class="login-icon">
                    <i class="fas fa-user-circle"></i>
                </div>
                <div class="login-title">Welcome Back!</div>
                <div class="login-subtitle">Sign in to your account to access the classroom reservation system.</div>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-2">Log in</button>
                    <div class="login-links text-center mt-3">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a> |
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a> |
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend confirmation</a>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-5 d-none d-lg-flex login-side">
            <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="Login Illustration" style="max-width: 320px; width: 100%; border-radius: 1.5rem; box-shadow: 0 4px 32px 0 rgba(0,0,0,0.08);">
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
