@page
@model UniClassReservation.Pages.Admin.Holidays.IndexModel
@{
    ViewData["Title"] = "Holidays";
}
<h2>Holidays</h2>
<a asp-page="Create" class="btn btn-primary mb-2">Add New Holiday</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Active?</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var holiday in Model.Holidays)
    {
        <tr>
            <td>@holiday.Name</td>
            <td>@holiday.StartDate.ToString("d")</td>
            <td>@holiday.EndDate.ToString("d")</td>
            <td>@(holiday.IsActive ? "Yes" : "No")</td>
            <td>
                <a asp-page="Edit" asp-route-id="@holiday.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-page="Delete" asp-route-id="@holiday.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table> 